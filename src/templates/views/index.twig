{% extends "base.twig" %}

{% block content %}
	<div class="container" id="indexTwig">
		<h1>{{ site.title }}</h1>

		{% for post in posts %}
			<article>
				<h1><a href="{{ post.link }}">{{ post.title }}</a></h1>
				{{ post.content }}
			</article>
		{% endfor %}
	</div>

  {% include 'partial/pagination.twig' with {pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2})} %}
{% endblock %}
